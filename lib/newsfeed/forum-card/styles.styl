.forum-card
  padding 0
  margin-bottom 20px
  overflow hidden
  background #fff

  .link
    font-weight inherit
    color inherit
    text-decoration inherit

  .cover,
  .body
    padding 20px

  .cover
    color #f5f5f5
    background-size cover
    background-repeat no-repeat
    background-position center center

    h1
      color inherit
      margin 2em 0 0
      line-height 1.5
      text-overflow ellipsis
      white-space nowrap
      overflow hidden

    p
      margin 0
      line-height 1.5
      color inherit

  .author
    text-align right

    .avatar
      float right
      margin-left 8px
      width 35px
      border-radius 100%

    p
      padding-top 6px
      text-overflow ellipsis
      white-space nowrap
      overflow hidden

